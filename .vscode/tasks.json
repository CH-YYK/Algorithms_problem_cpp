{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C++",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "--std=c++11",
        "${file}",
        "-o",
        "${workspaceRoot}/${fileBasename}.out"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "execute Cppoutput",
      "type": "shell",
      "command": "${workspaceRoot}/${fileBasename}.out",
      "group": "build",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "C/C++: cpp build active file",
      "command": "/usr/bin/cpp",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}